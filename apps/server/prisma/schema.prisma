datasource db {
    provider = "mysql"

    url = env("DATABASE_URL")

    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    username String  @id @unique
    password String
    plants   Plant[]
}

model Plant {
    id          Int         @id @default(autoincrement())
    name        String
    image       String
    latinName   String
    description String
    user        User        @relation(fields: [username], references: [username], onDelete: Cascade)
    username    String
    GraphData   GraphData[]

    @@index([username])
}

model GraphData {
    plantId   Int
    plant     Plant  @relation(fields: [plantId], references: [id], onDelete: Cascade)
    type      String
    value     Float
    dateEpoch Int

    @@id([plantId, type, dateEpoch])
    @@index([plantId])
}
